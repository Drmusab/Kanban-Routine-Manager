# Desktop App Production Dockerfile (Build stage for web assets)
FROM node:18-alpine AS builder

WORKDIR /app

# Build argument for API URL (empty string for production to use relative URLs)
ARG REACT_APP_API_URL=

# Copy package files
COPY apps/desktop/package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY apps/desktop/ .

# Build React app with environment variable
ENV REACT_APP_API_URL=$REACT_APP_API_URL
RUN npm run build

# Production stage - Nginx to serve built assets
FROM nginx:alpine

# Copy built files from builder stage
COPY --from=builder /app/build /usr/share/nginx/html

# Copy nginx configuration
COPY infra/docker/nginx.conf /etc/nginx/conf.d/default.conf

# Expose port
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:3000/ || exit 1

# Start nginx
CMD ["nginx", "-g", "daemon off;"]
